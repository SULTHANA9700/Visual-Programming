using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Ch04Ex03
{
   class Program
   {
      static void Main(string[] args)
      {
         const string myName = "neha";
         const string sexyName = "chasshu";
         const string sillyName = "duffu";
         string name;
         Console.WriteLine("What is your name?");
         name = Console.ReadLine();
         switch (name.ToLower())
         {
            case myName:
               Console.WriteLine("You have the same name as me!");
               break;
            case sexyName:
               Console.WriteLine("My, what a sexy name you have!");
               break;
            case sillyName:
               Console.WriteLine("Thatâ€™s a very silly name.");
               break;
         }
         Console.WriteLine("Hello {0}!", name);
         Console.ReadKey();
      }
   }
}
